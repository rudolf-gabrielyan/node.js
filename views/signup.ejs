<%- include('layouts/guest_header.ejs') %> 
<style>
	input::placeholder {
		color: white !important;
	}
	 input[type="text"], input[type="email"], input[type="password"] {
	  font-size: 0.9em;
	  color: #fff;
	  font-weight: 100;
	  width: 94.5%;
	  display: block;
	  border: none;
	  padding: 0.8em;
	  border: solid 1px rgba(255, 255, 255, 0.37);
	  -webkit-transition: all 0.3s cubic-bezier(0.64, 0.09, 0.08, 1);
	  transition: all 0.3s cubic-bezier(0.64, 0.09, 0.08, 1);
	  background: -webkit-linear-gradient(top, rgba(255, 255, 255, 0) 96%, #fff 4%);
	  background: linear-gradient(to bottom, rgba(255, 255, 255, 0) 96%, #fff 4%);
	  background-position: -800px 0;
	  background-size: 100%;
	  background-repeat: no-repeat;
	  color: #fff;
	  font-family: 'Roboto', sans-serif;
	}
</style>



	<div class="main-w3layouts wrapper">
		<h1>Creative SignUp Form</h1>
		<div class="main-agileinfo">
			<div class="agileits-top">
				<form action="user/signup" method="POST">
					<% 
					if(errors)
					errors.forEach(function(item){ %>
					<% if(item.param == 'username') { %>
					<p class="err_msg"><%=item.msg%></p>
					<% } %>
					<% }) %>
					<input class="text" type="text" name="username" placeholder="Username" required="">
					<% 
					if(errors)
					errors.forEach(function(item){ %>
					<% if(item.param == 'email') { %>
					<p class="err_msg"><%=item.msg%></p>
					<% } %>
					<% }) %>
					<input class="text email" type="email" name="email" placeholder="Email" required="">
					<% 
					if(errors)
					errors.forEach(function(item){ %>
					<% if(item.param=='password') { %>
					<p class="err_msg"><%=item.msg%></p>
					<% } %>
					<% }) %>
					<input class="text" type="password" name="password" placeholder="Password" required="">
					<% 
					if(errors)
					errors.forEach(function(item){ %>
					<% if(item.param=='conf_password') { %>
					<p class="err_msg"><%=item.msg%></p>
					<% } %>
					<% }) %>
					<input class="text w3lpass" type="password" name="conf_password" placeholder="Confirm Password" required="">
					<div class="wthree-text">
						<label class="anim">
							<input type="checkbox" class="checkbox" required="">
							<span>I Agree To The Terms & Conditions</span>
						</label>
						<div class="clear"> </div>
					</div>
					<input type="submit" value="SIGNUP">
				</form>
				<p>Don't have an Account? <a href="/login"> Login Now!</a><br><br><a href="welcome"> Home</a></p>
			</div>
		</div>
		
	</div>

<%- include('layouts/footer.ejs') %> 